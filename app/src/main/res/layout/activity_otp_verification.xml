<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:tint="#1A1A1A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="117dp"
            android:layout_height="113dp"
            android:layout_marginTop="44dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/login_page_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Verify Code"
            android:textColor="#1A1A1A"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"
            android:text="We've sent a 6-digit code to your email.\nEnter the code below to continue."
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <!-- Code Label -->
        <TextView
            android:id="@+id/tvCodeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Enter the code"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescription" />

        <!-- OTP Input Container -->
        <LinearLayout
            android:id="@+id/llOtpContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCodeLabel">

            <EditText
                android:id="@+id/etOtp1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/otp_box_selector"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/etOtp2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/otp_box_selector"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/etOtp3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/otp_box_selector"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/etOtp4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/otp_box_selector"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/etOtp5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/otp_box_selector"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/etOtp6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/otp_box_selector"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#1A1A1A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

        </LinearLayout>

        <!-- Resend Code -->
        <LinearLayout
            android:id="@+id/llResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llOtpContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did not received the code? "
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvResendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Resend it."
                android:textColor="#5D4E3C"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Continue Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_background"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llResend" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
