<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            app:tint="#1A1A1A" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="117dp"
            android:layout_height="113dp"
            android:layout_marginTop="44dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/login_page_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack" /> />

        <!-- Reset Password Title -->
        <TextView
            android:id="@+id/tvResetPasswordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivLogo"
            android:layout_marginTop="20dp"
            android:text="Reset Password"
            android:textColor="#1A1A1A"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvResetPasswordTitle"
            android:layout_marginTop="8dp"
            android:text="Enter your new password. Make sure it's at least 8 characters long."
            android:textColor="#666666"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp" />

        <!-- New Password Label -->
        <TextView
            android:id="@+id/tvNewPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginTop="24dp"
            android:text="New Password"
            android:textColor="#1A1A1A"
            android:textSize="13sp" />

        <!-- New Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNewPasswordLabel"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="#CCCCCC"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false"
            app:endIconMode="password_toggle"
            app:endIconTint="#666666">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#AAAAAA"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm New Password Label -->
        <TextView
            android:id="@+id/tvConfirmPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tilNewPassword"
            android:layout_marginTop="16dp"
            android:text="Confirm New Password"
            android:textColor="#1A1A1A"
            android:textSize="13sp" />

        <!-- Confirm Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvConfirmPasswordLabel"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="#CCCCCC"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="false"
            app:endIconMode="password_toggle"
            app:endIconTint="#666666">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Loreta's1"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#1A1A1A"
                android:textColorHint="#AAAAAA"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/tilConfirmPassword"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>